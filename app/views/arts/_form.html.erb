<%= simple_form_for [@art] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :location, required: true  %>
    <%= button_tag "Get Location", type: "button", data: { :'loading-text' => "Locatingâ€¦", :'reset-text' => "Get Location" }, id: "locator" %>
    <%= f.input :latitude, as: :hidden %>
    <%= f.input :longitude, as: :hidden %>
    <%= f.input :title, required: true %>
    <%= f.input :description, required: true  %>
    <%= f.input :tags %>
    <% if current_user.is_a?(StreetArtist) %>
      <%= simple_fields_for :other do |o| %>
        <%= o.input :owner, as: :boolean, label: 'This is my creation' %>
        <% end %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Complete" %>
  </div>
<% end %>
