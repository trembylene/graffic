<div class="text-center"></div>
<div class="card-container">
  <div class="container">
    <div class="row">
      <% @arts.each do |art| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <div class="art" style="background-image: url(<%= art.photo %>);">
              <div class="card-category"><%= art.tags %></div>
            </div>
            <div class="card-description">
              <h2><%= link_to art.title, art_path(art) %></h2>
            </div>
            <%= link_to "", art_path(art), class: "card-link"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
