<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-container">
        <h2 class="page-title">Art I've Uploaded</h2>
        <div class="index-cards">
          <div class="container">
            <div class="row">
              <% @arts.each do |art| %>
                <% if current_user.id == art.user_id %>
                  <div class="col-xs-12 col-sm-6 col-lg-4">
                    <div class="card">
                      <div class="card-header">
                        <h2 class="card-title"><%= art.title %></h2>
                      </div>
                      <div class="card-body">
                        <div class="card-photo" style="background-image: url(<%= art.photo %>);">
                        </div>
                      </div>
                      <div class="card-footer">
                        <div class="avatars">
                          <div class="avatar avatar-card-artist" style="background-image: url(<%= art.user.avatar %>);"></div>
                          <div></div>
                        </div>
                        <p class="card-description">First five words of description...</p>
                        <div class="read-more">
                          <%= link_to "Read More", art_path(art) %>
                        </div>
                      </div>
                      <%= link_to "", art_path(art), class: "card-link"  %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
