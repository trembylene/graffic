<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
      <%= f.input :alias, required: true, autofocus: true, placeholder: 'Alias', class: "form-control" %>
      <%= f.input :type, label: 'Are you a street artist or art enthusiast?', collection: User::TYPE.invert, as: :radio_buttons, required: true, class: "form-control" %>
      <%= f.input :email, required: true, placeholder: 'Email', class: "form-control"  %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password', class: "form-control" %>
      <%= f.input :password_confirmation, required: true, placeholder: 'Password confirmation', class: "form-control" %>
    <%= f.button :submit, "Sign up", class: "btn btn-success submit-button" %>
  </div>
<% end %>
