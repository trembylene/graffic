<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon4"><i class="fa fa-user-o" aria-hidden="true"></i></span>
      <%= f.input :alias, required: true, autofocus: true, label: false, placeholder: 'Alias' %>
    </div>

    <div class="input-group">
      <%= f.input :type, label: 'Are you a street artist or art enthusiast?', collection: User::TYPE.invert, as: :radio_buttons, required: true %>
    </div>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
      <%= f.input :email, required: true, placeholder: 'Email', label: false  %>
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2"><i class="fa fa-key" aria-hidden="true"></i></span>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password', label: false, class: "form-control" %>
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3"><i class="fa fa-key" aria-hidden="true"></i></span>
      <%= f.input :password_confirmation, required: true, placeholder: 'Password confirmation', label: false, class: "form-control" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-success submit-button" %>
  </div>
<% end %>
