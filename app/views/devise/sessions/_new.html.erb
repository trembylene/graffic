<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, placeholder: 'Email', class: "form-control" %>
      <%= f.input :password, required: true, placeholder: 'Password', class: "form-control" %>
    <%= f.input :remember_me, inline_label: 'Yes, remember me', as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: "btn btn-success submit-button" %>
  </div>
<% end %>
