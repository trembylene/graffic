<div class="navbar-wagon navbar-fixed-top">
  <div>
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>

    <!-- Search -->
    <%= form_tag(search_arts_path, :method => "get", id: "search", class: "navbar-form navbar-right hidden-xs hidden-sm") do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], class: "navbar-form-control", placeholder: "Find street art" %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-default navbar-btn") do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Explore Street Art", arts_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Upload Street Art", new_art_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to arts_path do %>
                <%= image_tag("/assets/spray.svg") %>  <%= t(".uploaded_art", default: "Art I've Uploaded") %>
              <% end %>
            </li>
            <li>
              <%= link_to arts_path do %>
                <i class="fa fa-tree"></i>  <%= t(".my_street-art", default: "My Street Art") %>
              <% end %>
            </li>
            <li>
              <%= link_to arts_path do %>
                <i class="fa fa-tree"></i>  <%= t(".my_likes", default: "Hearted Art") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class:"fas fa-trash-alt" do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), "#", class: "navbar-wagon-item navbar-wagon-link", data: {toggle: "modal", target: "#login-modal"} %>
      <%= link_to t(".sign_up", default: "Sign up"), "#", class: "navbar-wagon-item navbar-wagon-link", data: {toggle: "modal", target: "#login-modal"} %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= form_tag(search_arts_path, :method => "get", id: "search-form", class: "navbar-wagon-item navbar-wagon-link", type:"search") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <% end %>
        </li>
        <li>
          <%= link_to arts_path do %>
            <i class="fa fa-tree"></i>  <%= t(".uploaded_art", default: "Uploaded Art") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_art_path do %>
            <i class="fa fa-leaf"></i> <%= t(".my_street-art", default: "My Street Art / My Collection") %>
          <% end %>
        </li>
        <li>
          <%= link_to arts_path do %>
            <i class="fa fa-bookmark-o"></i>  <%= t(".my_likes", default: "My likes / Art I liked") %>
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_registration_path do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
      </div>
    <% else %>

      <!-- Login link (when logged out) -->
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= form_tag(search_arts_path, :method => "get", id: "search-form", class: "navbar-wagon-item navbar-wagon-link", type:"search") do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search" %>
              <% end %>
            </li>

            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"></i> <%= t(".sign_in", default: "Login") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fa fa-user-plus"></i> <%= t(".sign_up", default: "Sign up") %>
              <% end %>
            </li>
          </ul>
        </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/modal" %>
