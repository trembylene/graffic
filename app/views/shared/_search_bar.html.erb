<div class="search-filters" id="index-filters">
  <ul class="list-inline">
    <li id="hideable"><%= form_tag(arts_path, :method => "get", id: "popular") do %>
      <div class="form-group">
        <%= link_to 'Popular', filter: "popular" %>
      </div>
      <% end %>
    </li>
    <li id="hideable"><%= form_tag(arts_path, :method => "get", id: "recent") do %>
      <div class="form-group">
        <%= link_to 'Recent', filter: "recent" %>
      </div>
      <% end %>
    </li>
    <li><%= form_tag(arts_path, :method => "get", id: "search") do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Filter by keyword", id: 'filter' %>
      </div></li>
    <li><%= button_tag(type: "submit", class: "btn btn-default navbar-btn") do %>
      <i class="fa fa-search"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
